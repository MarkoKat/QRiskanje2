<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_edit"
            android:textColor="@color/matteBlackText"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ime_edit"
            android:hint="@string/editTextIme"
            android:inputType="text"
            android:maxLength="50"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/naslov_edit"
            android:hint="@string/editTextNaslov"
            android:inputType="text"
            android:maxLength="50"
            />

        <EditText
            android:id="@+id/opis_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/editTextOpis"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:maxLines="5"
            android:gravity="top"
            android:maxLength="1000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/namig_edit"
            android:hint="@string/editTextNamig"
            android:maxLength="100"
            android:inputType="text"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lat_edit"
            android:hint="@string/editTextLat"
            android:inputType="numberDecimal|numberSigned"
            android:maxLength="100"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lng_edit"
            android:hint="@string/editTextLng"
            android:inputType="numberDecimal|numberSigned"
            android:maxLength="100"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonSaveLocation"
            android:onClick="posodobi"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimaryDark"
            android:drawableEnd="@drawable/ic_send_white_24dp"
            />
        <Button
            android:id="@+id/download_qr_code_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonDownloadQR"
            android:onClick="prenesiQr"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorAccent"
            android:drawableStart="@drawable/ic_file_download_white_24dp"
            />

        <Button
            android:id="@+id/delete_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonDeleteLocation"
            android:onClick="deleteLoc"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/deleteRed"
            android:drawableStart="@drawable/ic_delete_white_24dp"
            />
    </LinearLayout>
</ScrollView>