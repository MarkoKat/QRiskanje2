<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ime"
        android:hint="@string/editTextIme"
        android:inputType="text"
        android:maxLength="50"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/naslov"
        android:hint="@string/editTextNaslov"
        android:inputType="text"
        android:maxLength="50"
        />

    <EditText
        android:id="@+id/opis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/editTextOpis"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:maxLines="5"
        android:gravity="top"
        android:maxLength="1000"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namig"
        android:hint="@string/editTextNamig"
        android:maxLength="100"
        android:inputType="text"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lat"
        android:hint="@string/editTextLat"
        android:inputType="numberDecimal|numberSigned"
        android:maxLength="100"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lng"
        android:hint="@string/editTextLng"
        android:inputType="numberDecimal|numberSigned"
        android:maxLength="100"
        />

    <CheckBox
        android:id="@+id/use_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/latLngUseGPS" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonAddLocation"
        android:onClick="poslji"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/colorPrimaryDark"
        android:drawableEnd="@drawable/ic_send_white_24dp"
        />
</LinearLayout>